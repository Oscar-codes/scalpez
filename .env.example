# QuantPulse - Configuración de Entorno
# Copiar a .env y ajustar valores

# ─── Base de Datos MySQL ─────────────────────────────────────────────
DB_ENABLED=false
DB_HOST=localhost
DB_PORT=3306
DB_USER=quantpulse
DB_PASSWORD=your_secure_password
DB_NAME=quantpulse
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ─── Deriv API ───────────────────────────────────────────────────────
DERIV_WS_URL=wss://ws.derivws.com/websockets/v3
DERIV_APP_ID=1089
DERIV_SYMBOLS=R_100,R_10,R_75,stpRNG

# ─── Trading Parameters ──────────────────────────────────────────────
CANDLE_INTERVAL_SECONDS=5
DEFAULT_TIMEFRAME=15s
MAX_CANDLES_BUFFER=500
SIGNAL_MIN_CONFIRMATIONS=2
SIGNAL_COOLDOWN_SECONDS=60
SIGNAL_RR_RATIO=2.0
SIGNAL_MIN_RR=1.5
MAX_TRADE_DURATION=30
RR_DEFAULT=2.0

# ─── Event Bus ───────────────────────────────────────────────────────
EVENT_BUS_MAX_QUEUE_SIZE=1000
